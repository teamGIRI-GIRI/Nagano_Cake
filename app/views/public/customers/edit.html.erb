<div class="container">
 <h4 class ="col-3 table-secondary text-center">会員情報編集</h4><br>

  <%= form_with(model: @customer, url: update_customer_path, method: :PATCH) do |f| %>

     <div class = "row">
       <div class="col-lg-3">氏名</div>
     
       <div class="col-lg-3">
         <%= f.text_field :last_name, autoforcus: true, autocomplete: "last_name", placeholder: "姓" %>
       </div>
       <div class="col-lg-3">
         <%= f.text_field :first_name, autoforcus: true, autocomplete: "first_name", placeholder: "名" %>
       </div>
     </div><br>
 
     <div class = "row">
       <div class="col-lg-3">フリガナ</div>
       <div class="col-lg-3">
         <%= f.text_field :last_name_kana, autoforcus: true, autocomplete: "last_name_kana", placeholder: "セイ" %>
       </div>
       <div class="col-lg-3">
         <%= f.text_field :first_name_kana, autoforcus: true, autocomplete: "first_name_kana", placeholder: "メイ" %>
       </div>
     </div><br>
 
     <div class = "row">
       <div class="col-lg-3">郵便番号(ハイフンなし)</div>
       <div class="col-lg-3">
         <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000" %>
       </div>
     </div><br>
 
     <div class = "row">
       <div class="col-lg-3">住所</div>
       <div class="col-lg-3">
         <%= f.text_field :address, autofocus: true, autocomplete: "address", :size => "50", placeholder: "東京都渋谷区代々木神園町0-0" %>
       </div>
     </div><br>
     
     <div class = "row">
       <div class="col-lg-3">電話番号(ハイフンなし)</div>
       <div class="col-lg-6">
         <%= f.text_field :tellphone_number, autofocus: true, autocomplete: "tellphone_number", placeholder: "00000000000" %>
       </div>
     </div><br>
     
     <div class = "row">
       <div class="col-lg-3">メールアドレス</div>
       <div class="col-lg-3">
         <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
       </div>
     </div><br>
     
     <div class = "row">
      <div class="col-lg-3"></div>
      <div class="col-lg-3">
       <%= f.submit "編集内容を保存する", class: "btn btn-success" %>
      </div>
      <div class="col-lg-3">
       <%= link_to "退会する", unsubscribe_path, class: "btn btn-danger" %>
      </div>
  <% end %>
</div>