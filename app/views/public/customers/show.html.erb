<div class="container">
 <h4 class="col-3 table-secondary text-center">マイページ</h4><br>

  <div class = "row">
    <div class="col-lg-1 offset-lg-1">登録情報</div>
    <div class="col-lg-2">
      <%= link_to "編集する", edit_customer_path, class: "btn btn-success" %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6 offset-lg-1">
      <table class="table table-bordered">
        <tr>
          <th class="table-active">お名前</th>
          <td><%= @customer.last_name + @customer.first_name %></td>
        </tr>
        <tr>
          <th class="table-active">フリガナ</th>
          <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-active">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="table-active">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="table-active">電話番号</th>
          <td><%= @customer.tellphone_number %></td>
        </tr>
        <tr>
          <th class="table-active">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-1 offset-lg-1">配送先</div>
    <div class="col-lg-2">
        <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
    </div>
  </div><br>
  
  <div class="row">
    <div class="col-lg-1 offset-lg-1">注文履歴</div>
    <div class="col-lg-2">
        <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>



    <%= link_to"log_out", destroy_customer_session_path, method: :delete %>