<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div class='container'>
    <div class='row'>
      <div class='col-md-2'>
        <table>
          <thead>
            <tr>
              <th>ジャンル検索</th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class='col-md-8 offset-md-2'>
        <!--商品件数をカウントしてXに代入する-->
        <h2 class="item-index-title">商品一覧(全X件)</h2>
          <tbody>
            <% @items.each do |item| %>
              <tr><%= image_tag item.get_item_image(200, 100) %></tr>
              <tr class="item-name"><%= item.name %></tr>
              <tr class="item-price"><%= item.price %></tr>
            <% end %>
          </tbody>
      </div>
    </div>
  </div>

</html>

<%= paginate @items %>