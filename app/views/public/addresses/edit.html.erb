<!-- 配送先編集 -->
<div class="container">
  <div class="row">

    <%= form_with model: @address, local: true do |f| %>
      <div class="col">
        郵便番号(ハイフンなし)
        <%= f.text_field :postal_code, autofocus: true %>
      </div>
      <div class="col">
        住所
        <%= f.text_field :address, autofocus: true %>
      </div>
      <div class="col">
        宛名
        <%= f.text_field :name, autofocus: true %>
        <%= f.submit '　変更内容を保存　'.html_safe, class: "btn btn-success", style: "font-weight: bold" %>
      </div>
    <% end %>

  </div>
</div>