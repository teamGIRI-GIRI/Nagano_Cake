<div class= "container">
 <h4>新規会員登録</h4><br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <%= render "public/shared/error_messages", resource: resource %>

         <div class = "row">
           <div class="col-lg-2">名前</div>
           <div class="col-lg-1">(姓)</div>
           <div class="col-lg-3">
             <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "姓" %>
           </div>
           <div class="col-lg-1">(名)</div>
           <div class="col-lg-3">
             <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "名" %>
           </div>
         </div><br>

         <div class = "row">
           <div class="col-lg-2">フリガナ</div>
           <div class="col-lg-1">(セイ)</div>
           <div class="col-lg-3">
             <%= f.text_field :last_name_kana, autoforcus: true, autocomplete: "last_name_kana", placeholder: "セイ" %>
           </div>
           <div class="col-lg-1">(メイ)</div>
           <div class="col-lg-3">
             <%= f.text_field :first_name_kana, autoforcus: true, autocomplete: "first_name_kana", placeholder: "メイ" %>
           </div>
         </div><br>

         <div class = "row">
           <div class="col-lg-3">メールアドレス</div>
           <div class="col-lg-3">
             <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
           </div>
         </div><br>

         <div class = "row">
           <div class="col-lg-3">郵便番号(ハイフンなし)</div>
           <div class="col-lg-3">
             <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000" %>
           </div>
         </div><br>

         <div class = "row">
           <div class="col-lg-3">住所</div>
           <div class="col-lg-3">
             <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0" %>
           </div>
         </div><br>

         <div class = "row">
           <div class="col-lg-3">電話番号(ハイフンなし)</div>
           <div class="col-lg-6">
             <%= f.text_field :tellphone_number, autofocus: true, autocomplete: "tellphone_number", placeholder: "00000000000" %>
           </div>
         </div><br>

         <div class = "row">
           <div class="col-lg-3">パスワード
            <% if @minimum_password_length %>
             <em>(<%= @minimum_password_length %>文字以上)</em>
            <% end %>
           </div>
           <div class="col-lg-3">
            <%= f.password_field :password %>
           </div>
         </div><br>

         <div class = "row">
           <div class="col-lg-3">パスワード(確認用)</div>
           <div class="col-lg-3">
             <%= f.password_field :password_confirmation %>
           </div>
         </div><br>

         <div class = "row">
          <div class="col-lg-3"></div>
          <div class="col-lg-3">
           <div class="actions">
             <%= f.submit "新規会員登録", class: "btn btn-primary" %>
           </div>
          </div>
         </div>
    <% end %>
</div>

<div class= "container">
 <h4>既に登録済みの方</h4>
  <div class = "row">
   <div class="col-lg-3">
    <%= render "public/shared/links" %>
   </div>