<div class="container">
  <div class="row">
    <div class="col-xs-3 offset-1">
      <br>
      <h4 class="customer-index-title", style="background-color: #ECECEC;">
        ショッピングカート
      </h4>
      <br>
    </div>
  </div>
</div>

<div class= "container">
  <div class = "row">
    <div class = "col-sm-10 px-sm-0 mx-auto">
      <table class="table table-striped-columns">
        <thead>
          <tr style="background-color: #ECECEC;">
            <td><strong>商品名</strong></td>
            <td><strong>単価(税込)</strong></td>
            <td><strong>数量</strong></td>
            <td><strong>小計</strong></td>
            <td></td>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= image_tag cart_item.item.get_item_image(150, 100) %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.with_tax_price %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.subtotal %></td>
              <td>
                <%= link_to "削除する", cart_item, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>