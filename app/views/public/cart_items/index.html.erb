<div class="container">
  <div class="row">
    <div class="col-xs-3 offset-1">
      <br>
      <h4 class="customer-index-title", style="background-color: #ECECEC;">
        ショッピングカート
      </h4>
      <br>
      <div>
        <%= link_to "カートを空にする", destroy_all_path, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
      </div>
    </div>
  </div>
</div>



<div class= "container">
  <div class = "row">
    <div class = "col-sm-10 px-sm-0 mx-auto">
      <table class="table table-bordered">
        <thead>
          <tr style="background-color: #ECECEC;">
            <td><strong>商品名</strong></td>
            <td><strong>単価(税込)</strong></td>
            <td><strong>数量</strong></td>
            <td><strong>小計</strong></td>
            <td></td>
          </tr>
        </thead>
        <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.get_item_image(80, 50) %>
              <strong><%= cart_item.item.name %></strong>
            </td>
            <td><strong>￥<%= cart_item.item.with_tax_price %></strong></td>
            <td>
              <%= form_with model:cart_item, url: cart_item_path(cart_item), method: :put do |f| %>
              <%= f.select :amount,  [*(1..10)] %>
              <%= f.submit '変更', class: "btn btn-success"%>
              <% end %>
            </td>
            <!--<td><strong><%= cart_item.amount %></strong></td>-->
            <td><strong>￥<%= cart_item.subtotal %></strong></td>
            <td>
              <%= link_to "削除する", cart_item, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <div>
        <%= link_to "買い物を続ける", root_path, class: "btn btn-sm btn-primary" %>
      </div>
      <div style="background-color: #ECECEC;" >
        合計金額
      </div>
      <div>
        ¥<%= @total.round.to_s(:delimited)%>
      </div>
      <div>
        <%= link_to "情報入力に進む", new_order_path, class: "btn btn-sm btn-success" %>
      </div>

    </div>
  </div>
</div>