<div class= "container">
  <h4 class = "col-lg-2 col-sm-8 table-secondary text-center mt-5">ログイン</h4>
  <h5 class = "col-4 table-secondary text-center mt-5">会員の方はこちらからログイン</h5>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <div class = "row mt-5 justify-content-center">
     <div class = "col-lg-2 offset-3">
       <%= f.label :email, "メールアドレス" %>
     </div>
     <div class = "col-lg-7">
       <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", style: "width: 50%;" %>
     </div>
   </div>

   <div class = "row mt-5 justify-content-center">
     <div class = "col-lg-2 offset-3">
       <%= f.label :password, "パスワード" %>
     </div>
     <div class = "col-lg-7">
       <%= f.password_field :password, autocomplete: "current-password", style: "width: 50%;" %>
     </div>
   </div>

   <div class = "row">
    <div class = "col-lg-2 offset-3"></div>
     <div class = "col-lg-6 center-block mt-5">
       <%= f.submit "ログイン", class: "btn btn-primary" %>
     </div>
   </div>
  <% end %>
</div>

<div class= "container mt-5">
 <h5 class="col-lg-4 table-secondary text-center">会員登録がお済みでない方</h5>
  <div class = "row">
   <div class="col-lg-6 offset-3 mt-3">
    <% if controller_name!= 'registrations' %>
     <%= link_to "こちら", new_registration_path(resource_name) %>
    <% end %>
    からログインしてください
   </div>
  </div>
</div>