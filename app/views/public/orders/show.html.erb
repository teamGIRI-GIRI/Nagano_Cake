<div class="container">
  <div class="row">
    <!-- 注文情報-->
    <div class="col-6">
      <table class="table table-bordered">
        <tr>
          <th>注文日</th>
          <td><!-- 注文日 -->
            <%= @order.created_at %>
          </td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><!-- 配送先 -->
            <%= @order.postal_code %>
            <%= @order.address %>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><!-- 支払方法-->
            <%= @order.payment_method %>
          </td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><!--ステータス-->
            <%= order.status %>
          </td>
        </tr>
      </table>
    </div>

        <!-- 請求情報-->
    <div class="col-4">
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <td><!-- 商品合計 -->
            <%= @order.total_payment %>
          </td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><!-- 配送料 -->
            <%= order.shipping_cost %>
          </td>
        </tr>
        <tr>
          <th><strong>ご請求額</strong></th>
          <td><!-- ご請求額-->
            <%= order.total_payment + order.shipping_cost %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>

