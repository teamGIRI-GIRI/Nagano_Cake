<div class="container">
  <div class="row">
    <div class="col-xs-3 offset-1">

      <br>
      <br>
      <h5 style="background-color: #ECECEC;">　注文履歴詳細　</h5>
      <br>
      <br>

    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <!-- 注文情報-->
    <div class="col-6">
      <p><strong>注文情報</strong></p>
      <table class="table table-bordered">
        <tr>
          <th bgcolor = "#f5f5f5" style="text-align: left; vertical-align: middle;">注文日</th>
          <td style="text-align: left; vertical-align: middle;"><!-- 注文日 -->
            <%= @order.created_at.strftime("%Y/%-m/%-d") %>
          </td>
        </tr>
        <tr>
          <th bgcolor="#f5f5f5" style="text-align: left; vertical-align: middle;">配送先</th>
          <td style="text-align: left; vertical-align: middle;"> <!-- 配送先 -->
            〒<%= @order.postal_code.to_s.insert(3, "-") %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th bgcolor = "#f5f5f5" style="text-align: left; vertical-align: middle;">支払方法</th>
          <td style="text-align: left; vertical-align: middle;"><!-- 支払方法-->
            <%= @order.payment_method_i18n %>
          </td>
        </tr>
        <tr>
          <th bgcolor = "#f5f5f5" style="text-align: left; vertical-align: middle;">ステータス</th>
          <td style="text-align: left; vertical-align: middle;"><!--ステータス-->
            <%= @order.status %>
          </td>
        </tr>
      </table>
    </div>

        <!-- 請求情報-->
    <div class="col-4">
      <p><strong>請求情報</strong></p>
      <table class="table table-bordered">
        <tr>
          <th bgcolor = "#f5f5f5" style="text-align: left; vertical-align: middle;">商品合計</th>
          <td style="text-align: left; vertical-align: middle;"><!-- 商品合計 -->
            <%= number_with_delimiter(@order.total_payment) %>
          </td>
        </tr>
        <tr>
          <th bgcolor = "#f5f5f5" style="text-align: left; vertical-align: middle;">配送料</th>
          <td style="text-align: left; vertical-align: middle;"><!-- 配送料 -->
            <%= number_with_delimiter(@order.shipping_cost) %>
          </td>
        </tr>
        <tr>
          <th bgcolor = "#f5f5f5" style="text-align: left; vertical-align: middle;">ご請求額</th>
          <td style="text-align: left; vertical-align: middle;"><!-- ご請求額-->
            <strong><%= number_with_delimiter(@order.total_payment + @order.shipping_cost) %></strong>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>

<!-- 注文内容-->
<div class="container">
  <div class="row">
    <div class="col">
      <br>
      <p><strong>注文内容</strong></p>
      <table class="table table-bordered">
        <thead>
          <tr bgcolor = "#f5f5f5">
            <th style="text-align: left; vertical-align: middle;">商品</th>
            <th style="text-align: left; vertical-align: middle;">単価(税込)</th>
            <th style="text-align: left; vertical-align: middle;">個数</th>
            <th style="text-align: left; vertical-align: middle;">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td style="text-align: left; vertical-align: middle;"><!-- 商品 -->
                <%= order_detail.item.name %>
              </td>
              <td style="text-align: left; vertical-align: middle;"><!-- 単価（税込） -->
                <%= order_detail.item.with_tax_price %>
              </td>
              <td style="text-align: left; vertical-align: middle;"><!-- 個数 -->
                <%= order_detail.amount %>
              </td>
              <td style="text-align: left; vertical-align: middle;"><!-- 小計-->
                <%= order_detail.subtotal %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>