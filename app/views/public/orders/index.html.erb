<!-- 注文履歴一覧 -->
<div class="container">
  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><!-- 注文日 -->
                <%= order.created_at %>
              </td>
              <td><!-- 配送先 -->
                <%= order.postal_code %>
                <%= order.address %>
                <%= order.name %>
              </td>
              <td><!-- 注文商品 -->
                
              </td>
              <td><!-- 支払金額-->
                <%= order.total_payment %>
              </td>
              <td><!--ステータス-->
                <%= order.status %>
              </td>
              <td><!--注文詳細-->
                <%= link_to '表示する'.html_safe, order_path(oeder), class: "btn btn-primary btn-sm", style: "font-weight: bold" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>