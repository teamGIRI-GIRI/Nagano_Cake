<!-- 注文履歴一覧 -->
<div class="container">
  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <thead>
          <tr bgcolor = "#f5f5f5">
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><!-- 注文日 -->
                <%= order.created_at %>
              </td>
              <td><!-- 配送先 -->
                <%= order.postal_code %><br>
                <%= order.address %><br>
                <%= order.name %>
              </td>
              <td><!-- 注文商品一覧 -->
                <%= orders.each do |order| %>
                  <%= order.order_details.item_id %>
                <% end %>
              </td>
              <td><!-- 支払金額-->
                <%= order.total_payment + order.shipping_cost %>
              </td>
              <td><!--注文ステータス-->
                <%= order.status %>
              </td>
              <td><!--注文詳細-->
                <%= link_to '表示する'.html_safe, orders_path(oeder_id), class: "btn btn-primary btn-sm", style: "font-weight: bold" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>