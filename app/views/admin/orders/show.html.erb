<div class="container mt-5">
    <h4 class ="col-3 table-secondary text-center">注文履歴詳細</h4>
    <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
      <table>
        <tbody>
        <tr>
          <th class="pt-2">購入者</th>
          <td class="pt-2">
            <%= link_to admin_customer_path do %>
             <%= @order.customer.last_name + @order.customer.first_name %>
            <% end %>
          </td>
        </tr>

        <tr>
          <th class="pt-2">注文日</th>
          <td class="pt-2">
            <%= @order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
          </td>
        </tr>

        <tr>
          <th class="pt-2">配送先</th>
          <td class="pt-2">
            〒<%= @order.postal_code %>
              <%= @order.address %>
              <%= @order.name %>
          </td>
        </tr>

        <tr>
          <th class="pt-2">支払方法</th>
          <td class="pt-2">
            <%= @order.payment_method %>
          </td>
        </tr>

        <tr>
          <th class="pt-2">注文ステータス</th>
          <td class="pt-2">
           <%= form_for (@order), url: order_path(@order) do |f| %>
           <%= f.select :order_status, Order.order_statuses.keys.to_a %>
           <%= f.submit "更新", class: "btn btn-success" %>
           <% end %>
          </td>
        </tr>

        </tbody>
      </table>
    <% end %>
    <div class="row mt-3">
      <div class="col-sm-8">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th class="table-secondary">商品名</th>
              <th class="table-secondary">単価(税込)</th>
              <th class="table-secondary">数量</th>
              <th class="table-secondary">小計</th>
              <th class="table-secondary">製作ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @order.order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.price * order_detail.amount %>円</td>
              <td>
                <%= form_with model: order_detail, url: admin_order_detail_path, method: :patch, local: true do |f| %>
                <%= f.hidden_field :order_detail_id, :value => order_detail.id %>
                <%= f.select :making_status, OrderDetail.making_statuses.keys %>
                <%= f.submit "更新", class: "btn btn-success" %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class = "col-4">
        <table class = "row mt-5">
          <tr>
            <th>商品合計</th>
            <td>円</td>
          </tr>
          <tr>
            <th>送料</th>
            <td>円</td>
          </tr>
          <tr>
            <th>請求金額合計</th>
            <td>円</td>
          </tr>
        </table>

      </div>
    </div>
</div>