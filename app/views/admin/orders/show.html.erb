<div class="container">
  <div class="row mt-5">
    <div class="col-auto">
      <h4 class="px-4" style="background-color:#ECECEC;">注文履歴詳細</h4>
    </div>
  </div>

  <table>
    <tbody>
    <tr>
      <th class="p-2">購入者</th>
      <td class="p-2">
        <%= link_to admin_customer_path(@order.customer) do %>
         <%= @order.customer.last_name + @order.customer.first_name %>
        <% end %>
      </td>
    </tr>

    <tr>
      <th class="p-2">注文日</th>
      <td class="p-2">
        <%= @order.created_at.strftime("%Y/%m/%d") %>
      </td>
    </tr>

    <tr>
      <th class="p-2">配送先</th>
      <td class="p-2">
        〒<%= @order.postal_code.to_s.insert(3, "-") %>
          <%= @order.address %>
          <%= @order.name %>
      </td>
    </tr>

    <tr>
      <th class="p-2">支払方法</th>
      <td class="p-2">
        <%= @order.payment_method_i18n %>
      </td>
    </tr>

    <tr>
      <th class="p-2">注文ステータス</th>
      <td class="p-2">
       <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
         <%= f.select :status, Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
         <%= f.submit "更新", class: "btn btn-sm btn-success offset-1" %>
       <% end %>
      </td>
      <td class = "text-success"><%= flash[:order] %></td>
    </tr>
    </tbody>
  </table>

  <div class="row align-items-end mt-4">
    <div class="col-lg-9 col-sm-auto">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="table-primary text-center">商品名</th>
            <th class="table-primary text-center">単価(税込)</th>
            <th class="table-primary text-center">数量</th>
            <th class="table-primary text-center">小計</th>
            <th class="table-primary text-center">製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td class = "text-center"><%= order_detail.item.name %></td>
            <td class = "text-center"><%= number_with_delimiter(order_detail.item.with_tax_price) %></td>
            <td class = "text-center"><%= order_detail.amount %></td>
            <td class = "text-center"><%= number_with_delimiter(order_detail.price) %>円</td>
            <td class = "text-center">
              <%= form_with model: order_detail, url: admin_order_detail_path(order_detail.id), method: :patch, local: true do |f| %>
              <%= f.hidden_field :order_detail_id, :value => order_detail.id %>
              <%= f.select :making_status, OrderDetail.making_statuses.keys.map {|k| [I18n.t("enums.order_detail.making_status.#{k}"), k]} %>
              <%= f.submit "更新", class: "btn btn-sm btn-success offset-1" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <table class ="col-lg-3 col-sm-auto">
      <tr>
        <th class = "px-2"><strong>商品合計</strong></th>
        <td class = "px-2">
          <%=  number_with_delimiter(@order.total_payment - @order.shipping_cost) %>円
        </td>
      </tr>

      <tr class="border-bottom border-4 border-dark">
        <th class = "p-2"><strong>送料</strong></th>
        <td class = "p-2">
          <%=  number_with_delimiter(@order.shipping_cost) %>円
        </td>
      </tr>

      <tr>
        <th class = "py-3 px-2"><strong>請求金額合計</strong></th>
        <td class = "py-3 px-2">
          <strong><%=  number_with_delimiter(@order.total_payment) %>円</strong>
        </td>
      </tr>
    </table>
  </div>
</div>