  <div class="container">
    <div class="row">
      <div class="offset-1">
        <br>
        <h4 class="customer-index-title", style="background-color: #ECECEC;">　会員一覧　</h4>
      </div>
      
      <div class = "col-10 px-sm-0 mx-auto">
        <table class="table">
          <thead>
            <tr>
              <th class="table-active">会員ID</th>
              <th class="table-active">氏名</th>
              <th class="table-active">メールアドレス</th>
              <th class="table-active">ステータス</th>
            </tr>
          </thead>

          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.id %></td>
                <td>
                  <%= link_to admin_customer_path(customer) do %>
                  <%= customer.last_name %><%= customer.first_name %>
                  <% end %>
                </td>
                <td><%= customer.email %></td>
                <td>
                  <% if customer.is_active %>
                    <strong class="text-success">有効</strong>
                  <% else %>
                    <strong class="text-secondary">退会</strong>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>


  <div class="pagination d-flex justify-content-center">
    <%= paginate @customers %>
  </div>
