 <div class="container">
    <div class="row">
      <div class="col-xs-3 offset-1">
        <!--<br>-->
        <br>
        <h4 class="customer-index-title", style="background-color: #ECECEC;">
          <%= @customer.last_name %> <%=@customer.first_name %>さんの会員詳細
        </h4>
        <br>
        <!--<br>-->
      </div>
    </div>
  </div>





<div class= "container">
  <div class = "row">
    <div class = "col-sm-10 px-sm-0 mx-auto">
      <table class='table'>
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %>  <%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.tellphone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @customer.is_active %>
              <strong class="text-success">有効</strong>
            <% else %>
              <strong class="text-secondary">退会</strong>
            <% end %>
          </td>
        </tr>
        <tr>
          <td colspan="1"></td>
          <td>
            <%= link_to '編集', edit_admin_customer_path(@customer), class: "btn btn-success" %>
          </td>
          <td>
            <!--注文履歴一覧ボタンを押すと管理者トップページに遷移-->
            <%= link_to '注文履歴一覧を見る', admin_top_path, class: "btn btn-primary" %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>