<% if @customer.errors.any? %>
  <div id="error_explanation">
    <h3><%= pluralize(@customer.errors.count, "error") %> prohibited this obj from being saved:</h3>
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
    <div class="row">
      <div class="col-xs-3 offset-1">
        <!--<br>-->
        <br>
        <h4 class="customer-index-title", style="background-color: #ECECEC;">
           <%= @customer.last_name %> <%=@customer.first_name %>さんの会員情報編集
        </h4>
        <br>
        <!--<br>-->
      </div>
    </div>
  </div>

<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div class= "container">
    <div class = "row">
      <div class = "col-sm-10 px-sm-0 mx-auto">

        <%= form_with model:@customer, url: admin_customer_path(@customer), local:true do |f| %>
        <table class="table-spacing-edit">
          <tr>
            <td class="col-4"><strong>会員ID</strong></td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td class="col-4"><strong>氏名</strong></td>
            <td class>
              <div class="form-group">
                <%= f.text_field :last_name, class: "form-control last_name" %>
              </div>
            </td>
            <td>
              <div class="form-group">
                <%= f.text_field :first_name, class: "form-control last_name" %>
              </div>
            </td>
          </tr>
          <tr>
            <td class="col-4"><strong>フリガナ</strong></td>
            <td>
              <div class="form-group">
                <%= f.text_field :last_name_kana, class: "form-control last_name_kana" %>
              </div>
            </td>
            <td>
              <div class="form-group">
                <%= f.text_field :first_name_kana, class: "form-control last_name_kana" %>
              </div>
            </td>
          </tr>
          <tr>
            <td class="col-4"><strong>郵便番号</strong></td>
            <td>
              <div class="form-group">
                <%= f.text_field :postal_code, class: "form-control postal_code" %>
              </div>
            </td>
          </tr>
          <tr>
            <td class="col-4"><strong>住所</strong></td>
            <td>
              <div class="form-group">
                <%= f.text_field :address, class: "form-control address" %>
              </div>
            </td>
          </tr>
          <tr>
            <td class="col-4"><strong>電話番号</strong></td>
            <td>
              <div class="form-group">
                <%= f.text_field :tellphone_number, class: "form-control tellphone_numbe" %>
              </div>
            </td>
          </tr>
          <tr>
            <td class="col-4"><strong>メールアドレス</strong></td>
            <td>
              <div class="form-group">
                <%= f.text_field :email, class: "form-control email" %>
              </div>
            </td>
          </tr>
          <tr>
            <td class="col-4"><strong>会員ステータス</strong></td>
            <td>
              <div class="field">
                <%= f.radio_button :is_active, 'true' %> 有効
                <%= f.radio_button :is_active, 'false' %> 退会
              </div>
            </td>
          </tr>
          <tr class="table-spacing-edit-button">
            <td colspan="1"></td>
            <td>
              <div class="form-group">
                <%= f.submit "変更を保存", class: "btn btn-lg btn-success" %>
              </div>
            </td>
          </tr>
        </table>
        <% end %>
      </div>
    </div>
  </div>
</html>