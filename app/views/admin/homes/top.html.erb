<div class= "container">
  <div class="row mt-5 ">
    <h4 class ="col-3 table-secondary text-center">注文履歴一覧</h4><br>
      <table class="table table-bordered mt-5">
        <thead>
          <tr>
            <th class="table-active">購入日時</th>
            <th class="table-active">購入者</th>
            <th class="table-active">注文個数</th>
            <th class="table-active">注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime("%Y/%m/%d %H:%M") %></td>
              <td><%= order.customer.last_name + order.customer.first_name %></td>
              <td><%= order.cart_items.sum(:quantity) %></td>
              <td>
                <%= form_with model: order, url: admin_order_path(order), method: :patch do |f| %>
                <%= f.select :order_status, Order.order_statuses, class: "form-control" %>
                <%= f.submit "更新", class: "btn btn-primary" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
   <%= paginate @orders %>
  </div>
</div>
<%= link_to"log_out", destroy_admin_session_path, method: :delete %>