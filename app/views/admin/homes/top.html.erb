<div class= "container">
  <div class = "text-success"><%= flash[:notice] %></div>
  <div class="row mt-5">
    <div class="col-auto">
      <h4 class="px-4" style="background-color:#ECECEC;">注文履歴一覧</h4>
    </div>
  </div>

  <div class="row mx-auto mt-5">
    <table class="table table-bordered text-center">
      <thead>
        <tr>
          <th class="col-2 table-secondary">購入日</th>
          <th class="col-2 table-secondary">購入者</th>
          <th class="col-1 table-secondary">注文個数</th>
          <th class="col-2 table-secondary">注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order) do %>
              <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
              <% end %>
            </td>
            <td><%= order.customer.last_name + order.customer.first_name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td><%= order.status_i18n %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="pagination d-flex justify-content-center pt-5">
    <%= paginate @orders %>
  </div>
</div>
